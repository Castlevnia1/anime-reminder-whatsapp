{
  "compilerOptions": {
    "target": "es2016",                            
    "module": "commonjs",                                
    "outDir": "./build",                                  
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                     
    "noImplicitAny": false,                            
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"]
}
