generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Anime {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  mal_id String @unique
  broadcast_data BroadcastData?
  registered String[]
}

type BroadcastData {
  timezone String
  day String
  time String
  start String
}